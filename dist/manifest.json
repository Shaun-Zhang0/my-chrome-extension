{
  "manifest_version": 2,
  "name": "前端开发助手",
  "description": "前端开发助手",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "前端开发助手",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "tabs",
    "activeTab"
  ]
}
